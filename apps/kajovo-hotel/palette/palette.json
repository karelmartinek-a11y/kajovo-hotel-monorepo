{
  "meta": {
    "app": "KájovoHotel",
    "version": "1.0.0",
    "ssot": "ManifestDesignKájovo.md",
    "notes": "Brand red (#FF0000) is reserved for SIGNACE and must not be reused as a general UI primary."
  },
  "brand": {
    "red": "#FF0000",
    "white": "#FFFFFF",
    "ink": "#000000",
    "metal": "#737578",
    "subtleMetal": "#9AA0A6"
  },
  "neutral": {
    "ink900": "#111111",
    "ink700": "#333333",
    "ink500": "#666666",
    "line300": "#E0E0E0",
    "surface100": "#FFFFFF",
    "surface200": "#F5F5F5",
    "surface300": "#EEEEEE"
  },
  "state": {
    "success": "#1B5E20",
    "warning": "#E65100",
    "error": "#B71C1C",
    "info": "#0D47A1"
  },
  "surface": {
    "background": "{neutral.surface100}",
    "panel": "{neutral.surface200}",
    "panelSubtle": "{neutral.surface300}",
    "border": "{neutral.line300}",
    "divider": "{neutral.line300}"
  },
  "text": {
    "primary": "{neutral.ink900}",
    "secondary": "{neutral.ink700}",
    "muted": "{neutral.ink500}",
    "inverse": "{neutral.surface100}"
  },
  "focus": {
    "ring": "{state.info}"
  },
  "shadow": {
    "color": "rgba(0,0,0,0.18)"
  }
}
