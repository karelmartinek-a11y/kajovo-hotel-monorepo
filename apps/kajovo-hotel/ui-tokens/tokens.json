{
  "meta": {
    "app": "KájovoHotel",
    "version": "1.0.0",
    "grid": "8pt",
    "typography": "Montserrat",
    "ssot": "Manifest.md"
  },
  "breakpoints": {
    "sm": {
      "min": 0,
      "max": 599
    },
    "md": {
      "min": 600,
      "max": 1023
    },
    "lg": {
      "min": 1024,
      "max": 1439
    },
    "xl": {
      "min": 1440,
      "max": 99999
    }
  },
  "device_classes": {
    "phone": {
      "min": 360,
      "max": 480
    },
    "tablet": {
      "min": 768,
      "max": 1024
    },
    "desktop": {
      "min": 1280,
      "max": 1920
    }
  },
  "spacing": {
    "s0": 0,
    "s1": 4,
    "s2": 8,
    "s3": 12,
    "s4": 16,
    "s5": 24,
    "s6": 32,
    "s7": 40,
    "s8": 48,
    "s9": 64,
    "s10": 80
  },
  "radius": {
    "r0": 0,
    "r8": 8,
    "r12": 12,
    "r16": 16
  },
  "elevation": {
    "e0": {
      "shadow": "none"
    },
    "e1": {
      "shadow": "0 1px 2px {shadow.color}"
    },
    "e2": {
      "shadow": "0 6px 18px {shadow.color}"
    },
    "e3": {
      "shadow": "0 16px 40px {shadow.color}"
    }
  },
  "typography": {
    "fontFamily": "'Montserrat', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif",
    "weights": {
      "regular": 400,
      "bold": 700
    },
    "sizes": {
      "xs": 12,
      "sm": 13,
      "md": 15,
      "lg": 18,
      "xl": 22,
      "2xl": 28,
      "3xl": 34
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.4,
      "relaxed": 1.6
    },
    "letterSpacing": {
      "normal": "0",
      "caps": "0.06em"
    }
  },
  "hit_target": {
    "touch": {
      "minWidth": 44,
      "minHeight": 44
    },
    "desktop": {
      "minWidth": 36,
      "minHeight": 36
    }
  },
  "zIndex": {
    "base": 0,
    "header": 10,
    "drawer": 20,
    "popover": 30,
    "modal": 40,
    "toast": 50,
    "kajovoSign": 60
  },
  "componentStates": {
    "focusRingWidth": 2,
    "disabledOpacity": 0.5
  },
  "signage": {
    "text": "KÁJOVO",
    "colors": {
      "background": "#FF0000",
      "text": "#FFFFFF"
    },
    "minThicknessPx": 24,
    "position": "fixed-left-bottom",
    "alwaysVisibleOnScroll": true
  }
}