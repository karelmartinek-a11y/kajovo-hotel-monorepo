    {
      "key": "dashboard",
      "label": "Přehled",
      "route": "/",
      "icon": "layout-dashboard",
      "active": true
    },
    {
      "key": "breakfast",
      "label": "Snídaně",
      "route": "/snidane",
      "icon": "utensils",
      "active": true
