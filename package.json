{
  "name": "kajovo-hotel-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm -r lint",
    "test": "pnpm --filter @kajovo/kajovo-hotel-web test",
    "ci:tokens": "node apps/kajovo-hotel/ci/lint-tokens.mjs",
    "ci:signage": "node apps/kajovo-hotel/ci/test-signage-presence.mjs",
    "ci:view-states": "node apps/kajovo-hotel/ci/test-view-states.mjs",
    "ci:gates": "pnpm ci:tokens && pnpm ci:signage && pnpm ci:view-states"
  }
}
